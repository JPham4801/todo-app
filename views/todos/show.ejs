  <%- include('../partials/html-head.ejs'); %>
  <%- include('../partials/nav.ejs'); %>
  <div class="todo-section">
    <div class="todo-container">
      <div class="page-content">
        <div>
          <h2><%= todo.taskName %></h2>
          <p><%= todo.taskDescription %></p>
        </div>
        <div>
          <a class="btn-link" href="/todos/<%= todo._id %>/edit">
            <button class="todo-btn">Edit</button>
          </a>
          <form class="btn-link" action="/todos/<%= todo._id %>?_method=delete" method="POST">
            <button class="todo-btn">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>